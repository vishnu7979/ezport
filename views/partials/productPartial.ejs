<% products.forEach(product => { %>  
    <div class="col-lg-4 col-md-6 col-sm-6 d-flex">
      <div class="card w-100 my-2 shadow-2-strong">
        <a href="/product/<%= product._id %>"> 
          <img src="/uploads/<%= product.image %>" alt="<%= product.name %>" class="card-img-top" />
        </a>
        <div class="card-body d-flex flex-column">
          <h4 class="card-title"><%= product.name %></h4>
          <h5 class="card-title"><%= product.price %></h5>
          <p class="card-text"><%= product.description %></p>
          <div class="card-footer d-flex align-items-end pt-3 px-0 pb-0 mt-auto">
            <form action="/addtocart" method="post">
              <input type="hidden" name="productId" value="<%= product._id %>">
              <button type="submit" class="btn btn-primary shadow-0 me-1">Add to Cart <i class="fa-solid fa-cart-shopping"></i></button>
            </form>
  
            <form action="/product/<%= product._id %>">
              <input type="hidden" name="productId" value="<%= product._id %>">
              <a href="/product/<%= product._id %>">
                <button type="submit" class="btn btn-primary shadow-0 me-1">View Item</button>
              </a>
            </form>
          </div>
        </div>
      </div>
    </div>
  <% }); %>
 

  