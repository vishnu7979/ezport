    <!-- Category Management Section -->
    <main style="margin-top: 58px;">
        <div class="container pt-4">
            <div class="hi"> 
                <div class="category-container">
                    <h4>Category Management</h4>
    
                    <ul class="category-list">
                        <% categories.forEach(category => { %>
                            <% if (!category.isDeleted) { %>    
                                <li>
                                    <span><%= category.name %></span>
                                    <div class="action-buttons">
                                        <a href="/admin/editcategory/<%= category.id %>"><button style="background-color: #0bc711;">Edit</button></a>
                                        <button style="background-color: #ff0000;" onclick="confirmDelete('<%= category.id %>')">Delete</button>

                                    </div>
                                </li>
                            <% } %>
                        <% }); %>
                    </ul>
    
                    <div class="create-button">
                        <a href="/admin/addcategoryform"><button>Create New</button></a>
                        <a href="/admin/sendCategoryOffer"><button>Add new Offer</button></a>
                    </div>
                </div>
            </div>
