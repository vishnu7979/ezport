<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Confirmation - Sport Store</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">

    <style>
        
        body {
            font-family: Arial, sans-serif;
            background-image: url('/images/banner-bg.png'); /* Add your background image here */
            background-size: cover;
            margin: 0;
             display: flex;     
            justify-content: center; 
             align-items: center;     
            height: 100vh;
        }

        .container {
            background-color: rgba(255, 255, 255, 0.8); /* Transparent white */
            backdrop-filter: blur(5px); /* Apply a 5px blur */
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 100%;
            text-align: center;
            margin: 20px;
        }

        h1, h2 {
            color: #333;
        }

            .card {
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 10px; /* Adjusted padding */
            margin-bottom: 10px; /* Adjusted margin */
            background-color: #fff;
        }


        p {
            color: #666;
            margin-bottom: 10px;
        }

        .button-container {
            display: flex;
            justify-content: space-between;
        }

        button[type="submit"] {
            background-color: #FF5722;
            border: none;
            border-radius: 5px;
            color: #fff;
            font-weight: bold;
            cursor: pointer;
            padding: 10px 20px;
        }

        button[type="submit"]:hover {
            background-color: #E64A19;
        }
    </style>
</head>

<body>
     <div class="container">
        <h2>Order Confirmation</h2>

        <div class="card">
            <h5>User</h5>
            <p>Name: <strong><%= user.name %></strong></p>
            <p>Email: <strong><%= user.email %></strong></p>
        </div>

        <div class="card">
            <h5>Address</h5>
            <p>Name: <strong><%= address.userName %></strong></p>
            <p>Street: <strong><%= address.street %></strong></p>
            <p>City: <strong><%= address.city %></strong></p>
            <p>State: <strong><%= address.state %></strong></p>
            <p>Pin Code: <strong><%= address.zip %></strong></p>
        </div>


        <div class="card">
            <h5>Product</h5>
            <p>Name: <strong><%= product.name %></strong></p>
            <p>Description: <strong><%= product.description %></strong></p>
            <p>Price: <strong>$<%= product.price.toFixed(2) %></strong></p>
        </div>

        <div class="card">
            <h5>Coupon Code</h5>
            <label for="coupon">Enter your coupon code:</label>
            <input type="text" id="coupon" placeholder="Enter coupon code">
            <button type="button" onclick="applyCoupon()">Apply</button>
        </div>

        <div class="button-container">
            <form action="/cart" method="GET">
                <button type="submit">Cancel Order</button>
            </form>

            <form action="/paymentmethod" method="GET">
                <!-- <button type="submit"> Proceed to Payment </button> -->
                <button type="submit" id="paymentButton"> Proceed to Payment  Rs.<span id="totalPrice"><%= product.price %></span></button>
            </form>
            
        </div>
    </div>
</body>
<script>
    function applyCoupon() {
        var couponCode = document.getElementById("coupon").value;
        var totalPriceElement = document.getElementById("totalPrice");
        var paymentButton = document.getElementById("paymentButton");

        // Define your coupon logic here
        if (couponCode === "FLAT30") {
            // Apply 30% discount
            var currentPrice = parseFloat(totalPriceElement.innerText.replace("$", ""));
            var discountedPrice = currentPrice * 0.7;
            totalPriceElement.innerText = "$" + discountedPrice.toFixed(2);
            paymentButton.innerText = "Proceed to Payment ($" + discountedPrice.toFixed(2) + ")";

            updateBackend(discountedPrice);

        }
    }
    
</script>



<script>
    async function proceedToPayment() {
        const totalPriceElement = document.getElementById("totalPrice");
        const totalPrice = parseFloat(totalPriceElement.innerText);
        const response = await fetch('/paymentmethod', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ totalPrice }), 

        });

        if (response.ok) {
            window.location.href = '/paymentmethod';  
        } else {
            alert('Error processing payment. Please try again later.');
        }
    }
</script>

</html>
